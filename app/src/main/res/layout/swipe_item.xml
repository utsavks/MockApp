<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="180dp"
        card_view:cardCornerRadius="4dp"
        android:layout_centerInParent="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="180dp"
    android:background="@color/cardview_light_background"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/tvSwipeTitle"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#58D6D6"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/favButton"
        android:layout_toStartOf="@+id/favButton"
        android:lines="2"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivSwipe"
        android:background="@drawable/default_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="7dp" />

    <RatingBar
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:id="@+id/swipeRatingBar"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_alignTop="@+id/tvSwipeRating"
        android:layout_toRightOf="@+id/tvSwipeRating"
        android:layout_toEndOf="@+id/tvSwipeRating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0.0"
        android:id="@+id/tvSwipeRating"
        android:layout_alignTop="@+id/ivSwipe"
        android:layout_toRightOf="@+id/ivSwipe"
        android:layout_toEndOf="@+id/ivSwipe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvSwipeStar"
        android:layout_below="@+id/swipeRatingBar"
        android:layout_alignLeft="@+id/tvSwipeRating"
        android:layout_alignStart="@+id/tvSwipeRating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address:"
        android:id="@+id/tvSwipeAddress"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/ivSwipe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvAddressLine"
        android:text="n/a"
        android:lines="1"
        android:layout_below="@+id/ivSwipe"
        android:layout_toRightOf="@+id/tvSwipeAddress"
        android:layout_toEndOf="@+id/tvSwipeAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hours:"
        android:id="@+id/tvHours"
        android:layout_below="@+id/tvSwipeAddress"
        android:layout_alignLeft="@+id/tvSwipeAddress"
        android:layout_alignStart="@+id/tvSwipeAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Open Now"
        android:id="@+id/tvOpenClose"
        android:layout_alignTop="@+id/tvHours"
        android:layout_toRightOf="@+id/tvHours"
        android:layout_toEndOf="@+id/tvHours"
        android:layout_marginLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost_n_a"
        android:id="@+id/tvPrice"
        android:textColor="#11bb11"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@+id/swipeRatingBar"
        android:layout_toRightOf="@+id/swipeRatingBar"
        android:layout_toEndOf="@+id/swipeRatingBar"
        android:layout_marginLeft="10dp" />

    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/favButton"
        android:background="@drawable/fav_button_design"
        android:layout_alignParentTop="true"
        tools:ignore="ContentDescription"
        android:checked="false"
        android:layout_above="@+id/swipeRatingBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textOff=""
        android:textOn=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="per night"
        android:id="@+id/tvUnits"
        android:layout_below="@+id/tvPrice"
        android:layout_alignLeft="@+id/tvPrice"
        android:layout_alignStart="@+id/tvPrice" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>